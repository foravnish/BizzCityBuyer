<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <android.support.v7.widget.CardView
        android:id="@+id/eventcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="visible"
        ads:cardCornerRadius="15dp"

        ads:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_below="@+id/linear"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/buyer"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Loading"
                        android:textColor="#4b4b4b"
                        android:textSize="16sp" />

                        <com.android.volley.toolbox.NetworkImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@+id/linear"
                            android:adjustViewBounds="true"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="#4b4b4b"
                            android:background="@drawable/right"
                            android:scaleType="fitXY" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/offersText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Loading"
                        android:textColor="#828282"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgaeView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/linear"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />





            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Loading..."
                android:textColor="#1f1f1f"
                android:layout_below="@+id/imgaeView" />


            <ImageView
                android:id="@+id/calpic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:tint="@color/grayText"
                android:background="@drawable/calender_n"/>

            <!--<TextView-->
               <!---->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_below="@+id/name"-->
                <!--android:layout_toRightOf="@+id/calpic"-->
                <!--android:text="Loading..."-->
                <!--android:textColor="@color/grayText"-->
                <!--android:textStyle="bold" />-->


        </RelativeLayout>
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"-->
        <!--android:background="@drawable/strock_dot"/>-->
    </android.support.v7.widget.CardView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">



        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/muli_semibold"
                        android:lines="2"
                        android:text="Loading...Loading...Loading...Loading...Loading...Loading...Loading..."
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linerLayoutOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/gray2"
                        android:background="@drawable/review" />

                    <com.romainpiel.shimmer.ShimmerTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:text="Date"
                        android:textColor="@color/black" />
                </LinearLayout>




            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"-->
        <!--android:background="@drawable/strock_dot"-->
        <!--android:visibility="gone"/>-->

    <!--</android.support.v7.widget.CardView>-->


</LinearLayout>