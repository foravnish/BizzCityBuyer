<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_grey_100">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/comName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="SNT Infotech Pvt. Ltd."
                android:textColor="@color/blue"
                android:fontFamily="@font/muli_bold"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>




            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rtbar2"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="100dp"
                android:layout_height="17dp"
                android:layout_below="@+id/comName"
                android:layout_marginLeft="8dp"
                android:isIndicator="true"
                android:layout_marginTop="4dp"
                android:numStars="5"
                android:progressTint="@color/orange"
                android:rating="4"
                android:stepSize="1" />
            <LinearLayout
                android:id="@+id/date_txt"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rtbar2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calender_n"
                    android:layout_below="@+id/rating_txt"
                    android:layout_toRightOf="@+id/user_icon"
                    android:tint="@color/md_grey_600"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/date_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/cal_icon"
                    android:layout_below="@+id/rating_txt"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grayText"
                    android:textSize="12sp"
                    android:text="05 May 2018"/>
            </LinearLayout>



            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_txt"
                android:layout_marginLeft="10dp"
                android:text="International trade Fair of machines and tools of woods for industries and many more useful tools, held on 13th sept.International trade Fair of machines and tools of woods for industries and many more useful tools, held on 13th sept."
                android:textColor="@color/md_grey_800"
                android:fontFamily="@font/muli"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:textSize="13sp" />

            <View
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:layout_below="@+id/review"
                android:layout_marginTop="10dp"
                android:background="@color/md_grey_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/deleteed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/delete"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/md_grey_600"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_margin="5dp"
                        android:textSize="18dp"
                        android:text="Delete"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/md_grey_700" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/md_grey_300" />

                <LinearLayout
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:drawableLeft="@drawable/edit"
                        android:drawableTint="@color/md_grey_600"
                        android:drawablePadding="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center|center_vertical"
                        android:text="Edit"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/md_grey_700" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>