<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@drawable/strock_simple"-->
    <!--android:layout_marginLeft="4dp"-->
    <!--android:layout_marginRight="4dp"-->
    <!--android:layout_marginTop="4dp">-->

    <LinearLayout
        android:id="@+id/linera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="240dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#fafafa"
            android:padding="7dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@drawable/homeimgjpg" />

        <TextView
            android:id="@+id/comName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/muli_semibold"
            android:text="Archies Paper's Shopee"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/muli_semibold"
            android:text="Indrapuram"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/comAdd"
            android:layout_margin="10dp"
            android:background="#90a4ae"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/muli_semibold"
            android:text="Write a Review"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!--<android.support.v7.widget.AppCompatRatingBar-->
        <!--android:id="@+id/rtbar"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="39dp"-->
        <!--android:layout_below="@+id/text1"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:isIndicator="false"-->
        <!--android:scaleX=".5"-->
        <!--android:scaleY=".5"-->
        <!--android:theme="@style/RatingBar"-->
        <!--android:transformPivotX="0dp" />-->


        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rtbar"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:numStars="5"
            android:layout_below="@+id/text1"
            android:progressTint="@color/orange"
            android:stepSize="1" />

        <LinearLayout
            android:id="@+id/editlay"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/rtbar"
            android:layout_margin="10dp"
            android:background="@drawable/strock_simple"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="@font/muli"
                android:gravity="top"
                android:hint="Write a review"
                android:inputType="textMultiLine"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:textSize="13sp" />
        </LinearLayout>
        <Button
            android:id="@+id/submitReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/strock_btn_green"
            android:fontFamily="@font/muli_bold"
            android:minEms="7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="submit"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalReviwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/muli_bold"
            android:minEms="7"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="submit"
            android:textColor="@color/blue" />
    </LinearLayout>
    <!--</ScrollView>-->






</RelativeLayout>